<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="col-9">
      <div class="card bg-info">
        <div class="card-header text-light"><%= t('page.sign_in') -%> : Next-L Enju</div>
        <div class="card-body bg-light" id="content_list">
          <%= f.error_messages -%>

          <%= markdown_helper(@library_group.login_banner) %>
        </div>
      </div>
    </div>

    <div class="col">
      <div class="card bg-info">
        <div class="card-body bg-light" id="content_list">
          <div class="field">
            <%= f.label :username %><br />
            <%= f.text_field :username, autofocus: true %>
          </div>

          <div class="field">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "off" %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit t('page.sign_in'), class: 'btn btn-primary' %>
          </div>

          <p class="alert"><%= alert %></p>

          <%= render "devise/shared/links" %>

        </div>
      </div>
    </div>
  </div>
<% end %>
